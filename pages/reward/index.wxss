.app-body {
  text-align: center;
}

.banner {
  display: block;
  width: 100%;
}

.about-con {
  text-align: left;
  padding: 40rpx;
  background: #fff;
  line-height: 2;
}

.shareCanvas-btnGroup {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shareCanvas-btnGroup view {
  width: 240rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 60rpx 0 60rpx 60rpx;
  color: #1f81e3;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: bold;
  box-shadow: 0 0 40rpx #c6d8ff;
  border: 0;
  margin: 0 auto;
}

.shareCanvas-btnGroup .stress {
  background: #1f81e3;
  color: #fff;
}

.text-center {
  text-align: center;
}

.reward-img {
  background: #fcfcfc;
  width: 640rpx;
  height: 640rpx;
}

.about-des {
  font-size: 26rpx;
  color: #000;
  margin-bottom: 60rpx;
  line-height: 2;
}

.mobile {
  background: rgb(241, 247, 253);
  height: 1000rpx;
  margin: 50rpx 100rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 30px 0 rgba(31, 129, 227, 0.5);
  transform: translate3d(0, 0, 0);
  overflow: hidden;
}

.mobile-head {
  width: 100%;
  height: 88rpx;
  background: white;
}

.mobile-head-title {
  position: relative;
  font-size: 28rpx;
  padding: 24rpx;
  color: #888;
  text-align: center;
}

.mobile-head-title:after {
  content: '';
  position: absolute;
  left: 0;
  top: 90rpx;
  width: 100%;
  height: 20rpx;
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(31, 129, 227, 0.1)), color-stop(0, transparent));
  background: -webkit-linear-gradient(rgba(31, 129, 227, 0.1) 0, transparent);
  background: linear-gradient(rgba(31, 129, 227, 0.1) 0, transparent);
}

.mobile-body-content {
  position: absolute;
  top: 88rpx;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30rpx 20rpx;
  overflow-x: hidden;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  color: #666;
  z-index: 1;
}

.msg-row {
  margin-bottom: 20rpx;
}

.msg-row::before, .msg-row::after {
  content: " ";
  display: table;
}

.msg-row::after {
  clear: both;
}

.msg-xianzhe {
  margin-bottom: 40rpx;
}

.msg-xianzhe .msg {
  -webkit-border-radius: 0 40rpx 40rpx 40rpx;
  border-radius: 0 40rpx 40rpx 40rpx;
}

.msg-bounce-in-left {
  float: left;
  -webkit-transform-origin: 0 0;
  -ms-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-animation: msgBounceIn 0.4s;
  animation: msgBounceIn 0.4s;
  text-align: left;
}

.msg {
  display: inline-block;
  padding: 18rpx 28rpx;
  max-width: 65%;
  overflow: hidden;
  word-wrap: break-word;
  font-size: 28rpx;
  line-height: 48rpx;
  background: white;
  -webkit-border-radius: 40rpx;
  border-radius: 40rpx;
  -webkit-box-shadow: 10rpx 10rpx 30rpx 0 rgba(102, 102, 102, 0.1);
  box-shadow: 10rpx 10rpx 30rpx 0 rgba(102, 102, 102, 0.1);
  -webkit-transition: width 0.12s ease-out, height 0.12s ease-out;
  transition: width 0.12s ease-out, height 0.12s ease-out;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
}

.mock-msg-row {
  position: absolute;
  top: -2000rpx;
  left: 36rpx;
  right: 20rpx;
  visibility: hidden;
}

.msg-me {
  margin-bottom: 40rpx;
}

.msg-me .msg {
  float: right;
  color: white;
  -webkit-border-radius: 40rpx 40rpx 0 40rpx;
  border-radius: 40rpx 40rpx 0 40rpx;
  -webkit-box-shadow: 10rpx 10rpx 30rpx 0 rgba(102, 102, 102, 0.15);
  box-shadow: 10rpx 10rpx 30rpx 0 rgba(102, 102, 102, 0.15);
}

.msg-me .msg {
  background: -webkit-linear-gradient(70deg, #3fd1e1 0%, #44d7cd 100%);
  background: linear-gradient(20deg, rgba(31, 129, 227, 0.5) 0%, rgba(31, 129, 227, 0.3) 100%);
}

.msg-bounce-in-right {
  -webkit-transform-origin: 100% 100%;
  -ms-transform-origin: 100% 100%;
  transform-origin: 100% 100%;
  -webkit-animation: msgBounceIn 0.4s;
  animation: msgBounceIn 0.4s;
  text-align: left;
}

.preview-img {
  color: #1f81e3;
}
