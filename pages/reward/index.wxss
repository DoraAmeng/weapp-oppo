.mobile {
  background: rgb(241, 247, 253);
  height: 1000rpx;
  margin: 50rpx 100rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 30px 0 rgba(31, 129, 227, 0.5);
  transform: translate3d(0, 0, 0);
  overflow: hidden;
}

.mobile-head {
  width: 100%;
  height: 88rpx;
  background: white;
}

.mobile-head-title {
  position: relative;
  font-size: 28rpx;
  padding: 12px;
  color: #888;
  text-align: center;
}

.mobile-head-title:after {
  content: '';
  position: absolute;
  left: 0;
  top: 90rpx;
  width: 100%;
  height: 20rpx;
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(31, 129, 227, 0.1)), color-stop(0, transparent));
  background: -webkit-linear-gradient(rgba(31, 129, 227, 0.1) 0, transparent);
  background: linear-gradient(rgba(31, 129, 227, 0.1) 0, transparent);
}

.mobile-body-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30rpx 20rpx;
  overflow-x: hidden;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  color: #666;
  z-index: 1;
}

.mock-msg-row {
  position: absolute;
  top: -1000px;
  left: 18px;
  right: 10px;
  visibility: hidden;
}

.msg-row {
  margin-bottom: 10px;
}

.msg-row::before, .msg-row::after {
  content: " ";
  display: table;
}

.msg-row::after {
  clear: both;
}

.msg-xianzhe {
  margin-bottom: 40rpx;
}

.msg-xianzhe .msg {
  -webkit-border-radius: 0 20px 20px 20px;
  border-radius: 0 20px 20px 20px;
}

.msg-bounce-in-left {
  -webkit-transform-origin: 0 0;
  -ms-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-animation: msgBounceIn 0.4s;
  animation: msgBounceIn 0.4s;
}

.msg {
  display: inline-block;
  padding: 9px 14px;
  max-width: 65%;
  overflow: hidden;
  word-wrap: break-word;
  font-size: 14px;
  line-height: 24px;
  background: white;
  -webkit-border-radius: 20px;
  border-radius: 20px;
  -webkit-box-shadow: 5px 5px 15px 0 rgba(102, 102, 102, 0.1);
  box-shadow: 5px 5px 15px 0 rgba(102, 102, 102, 0.1);
  -webkit-transition: width 0.12s ease-out, height 0.12s ease-out;
  transition: width 0.12s ease-out, height 0.12s ease-out;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
}

.mock-msg-row {
    position: absolute;
    top: -1000px;
    left: 18px;
    right: 10px;
    visibility: hidden;
}