.app-body {
  background: #f8f8f8;
}

.icon {
  clear: both;
  float: left;
  display: block;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-right: 10rpx;
}

.weui-cells {
  margin-top: 30rpx;
  background-color: #fff;
  line-height: 1.47058824;
  font-size: 30rpx;
  color: #1f81e3;
  overflow: hidden;
  position: relative;
}

.weui-cells:first-child {
  margin-top: 0;
}

.weui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.weui-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.weui-cell_access {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  color: inherit;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.weui-cell_access .weui-cell__ft {
  padding-right: 30rpx;
  position: relative;
}

.weui-cell__ft {
  text-align: right;
  color: #808080;
}

.weui-cell_access .weui-cell__ft:after {
  content: " ";
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  border-width: 1rpx 1rpx 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -7rpx;
  right: 0;
}

.weui-cell__hd image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  display: block;
}

.weui-cell {
  padding: 30rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-cell:first-child:before {
  border-top: 0;
}

.weui-cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  left: 15px;
  z-index: 2;
}

.originalContact {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 84rpx;
  opacity: 0;
}

.img-promote {
  width: 100%;
  display: block;
}

.big-btn-group {
  width: 100%;
  display: flex;
}

.big-btn-flex {
  flex: 1;
}

.big-btn {
  position: relative;
  text-align: left;
  margin: 50rpx 47rpx 20rpx 93rpx;
  padding: 20rpx;
  background: linear-gradient(to right, #35ac37, #86e688);
  color: #fff;
  border-radius: 30rpx;
}

.big-btn-flex:nth-child(2) .big-btn {
  margin: 50rpx 93rpx 20rpx 47rpx;
  background: linear-gradient(to right, #ea9518, #f3ca8b);
}

.big-btn .title {
  font-size: 28rpx;
  z-index: 2;
}

.big-btn .des {
  font-size: 24rpx;
  z-index: 2;
}

.big-btn image {
  content: '';
  position: absolute;
  right: 10rpx;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  z-index: 0;
}
