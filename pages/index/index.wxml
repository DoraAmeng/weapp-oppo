<!--index.wxml-->
<view class="image-con">
  <view class='top'>OPPO锁屏</view>
  <movable-area class='change-img-area'>
    <movable-view direction="all" class='change-img-view' x="{{x}}" y="{{y}}" damping="100" bindchange="movableChange" bindtouchend="movableEnd">
      <image src='{{mainActive.img}}' class='change-img change-img-active' mode="aspectFill" animation="{{animationData}}" style='opacity: {{endOpacity}};' bindtap="previewImg"></image>
      <view class='change-img-title' style='opacity: {{titleOpacity}};'>{{mainActive.title}}</view>
      <view class='change-img-author' style='opacity: {{titleOpacity}};'>{{mainActive.author}}</view>
    </movable-view>
  </movable-area>
  <view class='change-img-area2'>
    <view class='change-img-view2' style='transform: scale({{imgscale}}) translateY({{imgY}}rpx);'>
      <image src='{{item.img}}' wx:for="{{mainList}}" wx:key="index" class='change-img' mode="aspectFill"></image>
    </view>
  </view>
</view>