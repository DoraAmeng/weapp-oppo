/**index.wxss**/

.image-con {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.change-img-area {
  position: relative;
  width: 100%;
  height: 100vh;
  text-align: center;
}

.change-img-view {
  transition: all 1s ease;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -240rpx;
  margin-top: -320rpx;
  width: 480rpx;
  height: 640rpx;
}

.change-img {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}
